<Window x:Class="jeopardy.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:jeopardy"
        mc:Ignorable="d"
        Title="Jeopardy! : Main Window" Height="300" Width="300">
    <Grid>
        <Button x:Name="NewGame" Content="New Random Game" HorizontalAlignment="Left" Margin="70,15,0,0" VerticalAlignment="Top" Width="140" Height="35" Click="NewGame_Click"/>
        <Button x:Name="Scrape" Content="Scrape J-Archives" HorizontalAlignment="Left" Margin="70,190,0,0" VerticalAlignment="Top" Width="140" Height="35" Click="Scrape_Click"/>
        <Button x:Name="NewGame_ID" Content="New Game (J-Archive ID)" HorizontalAlignment="Left" Margin="70,75,0,0" VerticalAlignment="Top" Width="140" Height="35" Click="NewGame_ID_Click"/>
        <Button x:Name="LoadDBGame" Content="Load Game&#xD;&#xA;From DataBase" HorizontalAlignment="Left" Margin="70,135,0,0" VerticalAlignment="Top" Width="140" Height="35" Click="LoadDBGame_Click"/>

    </Grid>
</Window>
